        }

        public override T Deserialize(ref byte[] bytes, int offset, DirtyTracker tracker, out int byteSize)
        {
            byteSize = <#= tuple.Item2 #>;
            return deserializeCast(BinaryUtil.Read<#= t.Name #>(ref bytes, offset));
